APP_NAME="ApiSMS Gateway"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://sms-gateway.dj
APP_TIMEZONE=Africa/Djibouti

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file

PHP_CLI_SERVER_WORKERS=8

BCRYPT_ROUNDS=12

# Production Logging Configuration
LOG_CHANNEL=stack
LOG_STACK=daily,json,slack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=warning
LOG_SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
LOG_JSON_ENABLED=true

# Production Database
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=apisms_production
DB_USERNAME=apisms_user
DB_PASSWORD=STRONG_DATABASE_PASSWORD

# Kannel SMS Gateway Configuration - Production
KANNEL_URL=https://kannel.dpcr.dj:13013/cgi-bin/sendsms
KANNEL_USERNAME=production_user
KANNEL_PASSWORD=SECURE_KANNEL_PASSWORD
KANNEL_FROM=11123
KANNEL_TIMEOUT=30
KANNEL_RETRY_ATTEMPTS=3
KANNEL_RETRY_DELAY=2

# SMS Configuration - Production
SMS_DEFAULT_COUNTRY_CODE=+253
SMS_RATE_LIMIT_PER_MINUTE=200
SMS_MAX_LENGTH=160

# Production Session Configuration
SESSION_DRIVER=redis
SESSION_LIFETIME=720
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=.sms-gateway.dj
SESSION_SECURE_COOKIES=true

BROADCAST_CONNECTION=redis
FILESYSTEM_DISK=s3
QUEUE_CONNECTION=redis

# Queue Configuration - Production
QUEUE_FAILED_DRIVER=database
QUEUE_RETRY_AFTER=600
QUEUE_MAX_EXCEPTIONS=5

# Production Cache Configuration
CACHE_STORE=redis
CACHE_PREFIX=apisms_prod_cache
CACHE_TTL=7200

MEMCACHED_HOST=127.0.0.1

# Production Redis Configuration
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=SECURE_REDIS_PASSWORD
REDIS_PORT=6379
REDIS_DB=0
REDIS_CACHE_DB=1
REDIS_SESSION_DB=2

# Production Security Configuration
API_KEY_ENCRYPTION_KEY=base64:GENERATE_32_CHARACTER_KEY
WEBHOOK_IP_WHITELIST="KANNEL_SERVER_IP,BACKUP_SERVER_IP"
CORS_ALLOWED_ORIGINS="https://admin.sms-gateway.dj,https://dashboard.dpcr.dj"
CORS_ALLOWED_METHODS="GET,POST,PUT,DELETE,OPTIONS"
CSRF_PROTECTION_ENABLED=true
HTTPS_ONLY=true
FORCE_HTTPS=true

# Production Monitoring Configuration  
MONITORING_ENABLED=true
PROMETHEUS_METRICS_ENABLED=true
UPTIME_MONITORING_URL=https://uptime.sms-gateway.dj/webhook
HEALTH_CHECK_TOKEN=SECURE_HEALTH_CHECK_TOKEN

# Production Backup Configuration
DB_BACKUP_ENABLED=true
DB_BACKUP_SCHEDULE="0 2 * * *"
DB_BACKUP_RETENTION_DAYS=90
DB_BACKUP_STORAGE_DISK=s3

# Production Performance Configuration
RESPONSE_COMPRESSION_ENABLED=true
EAGER_LOADING_ENABLED=true
DB_QUERY_LOG_ENABLED=false

# Production Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailgun.org
MAIL_PORT=587
MAIL_USERNAME=MAILGUN_USERNAME
MAIL_PASSWORD=MAILGUN_PASSWORD
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@sms-gateway.dj"
MAIL_FROM_NAME="${APP_NAME}"

# Production AWS S3 Configuration
AWS_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY
AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET_KEY
AWS_DEFAULT_REGION=eu-west-1
AWS_BUCKET=apisms-production-storage
AWS_USE_PATH_STYLE_ENDPOINT=false

# Production CDN Configuration
CDN_URL=https://cdn.sms-gateway.dj
ASSET_URL=https://cdn.sms-gateway.dj

VITE_APP_NAME="${APP_NAME}"
VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"